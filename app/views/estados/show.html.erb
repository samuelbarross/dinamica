<%- model_class = Estado -%>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="ibox ">
    <div class="ibox-title">
      <h2>Dados</h2>
    </div>
    <div class="ibox-content">
              <p>
          <strong><%= model_class.human_attribute_name( :nome) %>:</strong>
          <%= @estado.nome %>
        </p>
              <p>
          <strong><%= model_class.human_attribute_name( :sigla) %>:</strong>
          <%= @estado.sigla %>
        </p>
              <p>
          <strong><%= model_class.human_attribute_name( :codigo_ibge) %>:</strong>
          <%= @estado.codigo_ibge %>
        </p>
          </div>
  </div>
</div>
